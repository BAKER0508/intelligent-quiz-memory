<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="3dp"
    app:cardBackgroundColor="@color/dark_surface"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Library Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_library_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="题库名称"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总题数: "
                    android:textColor="@color/text_secondary"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/text_total_questions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/accent_primary"
                    android:textSize="8sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  已完成: "
                    android:textColor="@color/text_secondary"
                    android:textSize="8sp"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/text_completed_questions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/success_green"
                    android:textSize="8sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/progress_bar_library"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progressTint="@color/accent_primary"
                    android:progressBackgroundTint="@color/dark_surface_variant" />

                <TextView
                    android:id="@+id/text_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/text_secondary"
                    android:textSize="8sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_study"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:text="学习"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:background="@drawable/button_primary_gradient"
                app:cornerRadius="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_statistics"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:text="统计"
                android:textColor="@color/text_secondary"
                android:textSize="8sp"
                android:background="@drawable/button_outline"
                app:cornerRadius="4dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>