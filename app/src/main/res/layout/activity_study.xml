<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_background">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/primary_color"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_study_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="题库练习"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="40dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Question Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="题目内容将在这里显示"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text_color"
                    android:lineSpacingExtra="4dp"
                    android:padding="20dp" />

            </androidx.cardview.widget.CardView>

            <!-- Memory Test Layout -->
            <LinearLayout
                android:id="@+id/layout_memory_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请先回忆答案："
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text_color"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_remember"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="记得"
                        android:textColor="@color/white"
                        android:background="@drawable/button_success"
                        android:layout_marginEnd="8dp"
                        android:paddingVertical="16dp" />

                    <Button
                        android:id="@+id/btn_not_remember"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="不记得"
                        android:textColor="@color/white"
                        android:background="@drawable/button_error"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="16dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Answer Layout -->
            <LinearLayout
                android:id="@+id/layout_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Answer Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/answer_background"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="标准答案："
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/answer_label_color"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="答案将在这里显示"
                            android:textSize="16sp"
                            android:textColor="@color/answer_text_color"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="您的回忆是否正确？"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text_color"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_correct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="记对了"
                        android:textColor="@color/white"
                        android:background="@drawable/button_success"
                        android:layout_marginEnd="8dp"
                        android:paddingVertical="16dp" />

                    <Button
                        android:id="@+id/btn_incorrect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="记错了"
                        android:textColor="@color/white"
                        android:background="@drawable/button_error"
                        android:layout_marginStart="8dp"
                        android:paddingVertical="16dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Next Button -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一题"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/button_primary"
        android:layout_margin="16dp"
        android:paddingVertical="16dp"
        android:visibility="gone" />

</LinearLayout>